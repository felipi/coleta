extends layout
block content
  script(type="text/javascript").
        $(document).ready(function(){
          $('#category').dataTable(
            { "aLengthMenu": [
            [25, 50, 100, 200, -1],
            [25, 50, 100, 200, "All"]
            ], 
            "iDisplayLength" : -1,
             }
          );
        });

  span
    if user
      span Welcome, #{user.username}!
        a(href="/logout") Logout
  
  if user
    h1 #{title}, #{user.username}!
  else
    h1 You are not logged in. 
      a(href="/auth/facebook") Do it!

  #content
    table#category
        thead
            tr
                - for field in fields
                    th #{field}
       
        tbody
            - for record in records
              - var _id = JSON.parse(JSON.stringify(record))['_id']
                tr(id=_id) 
                    - for field in fields
                        td= JSON.parse(JSON.stringify(record))[field]
